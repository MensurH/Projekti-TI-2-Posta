                                <table class="table table-hover">
                                    <thead class="thead-light table-borderless" style="color: #495057;">
                                        <tr>
                                            <th>Emri</th>
                                            <th>Mbiemri</th>
                                            <th>Emertimi</th>
                                            <th>Nr i Telefonit</th>
                                            <th>Adresa</th>
                                            <th>Qyteti</th>
                                            <th>Shteti</th>
