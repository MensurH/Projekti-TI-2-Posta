                                            <th>Data e krijimit</th>
                                            <th>Pages ndaj postes</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-borderless">
                                        @foreach (var porosi in Model)
                                        {
                                            @if (porosi.ERegjistruar == true)
                                            {
                                                <tr>

                                                    <td>@porosi.Emri</td>
                                                    <td>@porosi.Mbiemri</td>
                                                    <td>@porosi.Emertimi</td>
                                                    <td>@porosi.NrTelefonit</td>
                                                    <td>@porosi.Adresa</td>
                                                    <td>@porosi.Qyteti</td>
                                                    <td>@porosi.Shteti</td>
